{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://giesbusiness.illinois.edu/schemas/faculty.json",
  "title": "Faculty Member",
  "description": "Schema for faculty member data at Gies College of Business",
  "type": "object",
  "required": ["id", "name", "department"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the faculty member",
      "examples": ["smith-john", "johnson-sarah"]
    },
    "name": {
      "type": "string",
      "description": "Full name of the faculty member",
      "examples": ["Dr. John Smith"]
    },
    "title": {
      "type": "string",
      "description": "Academic title",
      "examples": ["Professor", "Associate Professor", "Assistant Professor"]
    },
    "department": {
      "type": "string",
      "description": "Department affiliation",
      "examples": ["finance", "accountancy", "business-administration"]
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Email address"
    },
    "phone": {
      "type": "string",
      "description": "Phone number"
    },
    "office": {
      "type": "string",
      "description": "Office location"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "Faculty profile URL"
    },
    "researchAreas": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Research interests and areas of expertise"
    },
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "degree": {"type": "string"},
          "field": {"type": "string"},
          "institution": {"type": "string"},
          "year": {"type": "integer"}
        }
      },
      "description": "Educational background"
    },
    "publications": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {"type": "string"},
          "journal": {"type": "string"},
          "year": {"type": "integer"},
          "citations": {"type": "integer"}
        }
      },
      "description": "Research publications"
    },
    "courses": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Courses taught"
    },
    "bio": {
      "type": "string",
      "description": "Short biography"
    },
    "certifications": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Professional certifications"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    }
  }
}
