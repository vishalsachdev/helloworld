{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://giesbusiness.illinois.edu/schemas/program.json",
  "title": "Academic Program",
  "description": "Schema for academic program data at Gies College of Business",
  "type": "object",
  "required": ["id", "name", "type", "level", "department"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the program",
      "examples": ["imba", "accountancy-bs"]
    },
    "name": {
      "type": "string",
      "description": "Full name of the program",
      "examples": ["iMBA (Online Master of Business Administration)"]
    },
    "type": {
      "type": "string",
      "enum": ["on-campus", "online", "hybrid"],
      "description": "Delivery format of the program"
    },
    "level": {
      "type": "string",
      "enum": ["undergraduate", "graduate", "doctoral"],
      "description": "Academic level of the program"
    },
    "department": {
      "type": "string",
      "description": "Department offering the program",
      "examples": ["finance", "accountancy", "business-administration"]
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the program"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "Canonical URL for the program page"
    },
    "admissions": {
      "type": "object",
      "properties": {
        "requirements": {
          "type": "array",
          "items": {"type": "string"},
          "description": "List of admission requirements"
        },
        "applicationDeadlines": {
          "type": "object",
          "description": "Application deadlines by term"
        },
        "applicationUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL to application portal"
        }
      }
    },
    "tuition": {
      "type": "string",
      "description": "Tuition cost information"
    },
    "duration": {
      "type": "string",
      "description": "Expected program duration",
      "examples": ["2 years", "12-18 months"]
    },
    "format": {
      "type": "string",
      "description": "Specific format details"
    },
    "rankings": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Notable rankings and recognitions"
    },
    "highlights": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Key features and highlights"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    }
  }
}
